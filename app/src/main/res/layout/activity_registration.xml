<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.neighborly.swapnilpatil.neighborly.RegistrationActivity">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/first_name_layout"
        android:layout_above="@+id/last_name_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"/>
        <EditText
            android:layout_weight="25.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_name"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/last_name_layout"
        android:layout_above="@+id/user_phone_number_layout"
        android:layout_alignLeft="@+id/first_name_layout"
        android:layout_alignStart="@+id/first_name_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"/>
        <EditText
            android:layout_weight="25.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_name"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="27dp"
        android:id="@+id/user_age_layout"
        android:layout_below="@+id/user_gender_layout"
        android:layout_alignLeft="@+id/user_gender_layout"
        android:layout_alignStart="@+id/user_gender_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"/>
        <EditText
            android:layout_weight="25.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_age"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/user_gender_layout"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/user_phone_number_layout"
        android:layout_alignStart="@+id/user_phone_number_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"/>
        <EditText
            android:layout_weight="25.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_gender"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:text=""/>

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/user_phone_number_layout"
        android:layout_above="@+id/user_gender_layout"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"/>
        <EditText
            android:layout_weight="25.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_phone_number"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="50dp"
            android:text=""/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_details"
        android:layout_below="@+id/user_age_layout"
        android:layout_alignRight="@+id/user_age_layout"
        android:layout_alignEnd="@+id/user_age_layout"
        android:layout_marginTop="40dp" />

</RelativeLayout>